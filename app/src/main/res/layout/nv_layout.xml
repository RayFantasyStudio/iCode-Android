<layout xmlns:android="http://schemas.android.com/apk/res/android"
>

    <data>

        <variable
                name="theme"
                type="com.rayfantasy.icode.model.ICodeTheme"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:background="@{theme.colorPrimary}"
            android:id="@+id/nv_bg"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/nv_user_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@mipmap/ic_nv_user"
                android:layout_marginTop="20dp"/>

        <TextView
                android:id="@+id/nv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nonLogin"
                android:textColor="@color/nv_username"
                android:textSize="25sp"
                android:layout_marginTop="20dp"/>
    </LinearLayout>

</layout>