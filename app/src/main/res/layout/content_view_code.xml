<com.rayfantasy.icode.editor.ScrollViewText xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionName="write_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_write_code">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_code_tv_sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.rayfantasy.icode.editor.HorScrollViewText
            android:id="@+id/horScrollViewText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scrollbars="none">

            <com.rayfantasy.icode.editor.CodeEditor
                android:id="@+id/codeEditor"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.rayfantasy.icode.editor.TextEditorView
                    android:id="@+id/tv_code"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:editable="false"
                    android:background="@null"
                    android:hint="代码 如:System.printf(Hello World);"
                    android:textSize="12sp" />
            </com.rayfantasy.icode.editor.CodeEditor>

        </com.rayfantasy.icode.editor.HorScrollViewText>

    </LinearLayout>
</com.rayfantasy.icode.editor.ScrollViewText>
