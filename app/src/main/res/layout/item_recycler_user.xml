<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="theme"
            type="com.rayfantasy.icode.model.ICodeTheme" />
    </data>

    <android.support.v7.widget.CardView
        style="@style/FullWidthCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/user_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="28.79"
                    android:background="#FF5722" />

                <ImageView
                    android:id="@+id/user_item_avatar"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="135dp"
                    android:src="@mipmap/ic_account_box_black"
                    android:translationZ="10dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/user_item_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="User_Name"
                android:textColor="@{theme.colorPrimaryDark}"
                android:textSize="35dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>